<div class='container'>
  <div class="row">
<% @flat.pictures.each do |pic| %>
<div class="col-xs-5">
  <%= image_tag pic.image.url(:medium) %>
  <p class="text-center"><%= link_to 'Destroy', flat_picture_path(@flat, pic), :class => 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>
<% end %>
</div>
<div class="row">
<div class="col-xs-6 col-xs-offset-3">
<div class="panel panel-primary">
  <div class="panel-heading"><%= @flat.name %></div>
  <div class="panel-body">

<p>
  <%= @flat.description %>
</p>

<p>
  <strong>EUR </strong>
  <%= @flat.price %>
</p>

<p>
  <strong>Street:</strong>
  <%= @flat.street %>
</p>

<p>
  <strong>City:</strong>
  <%= @flat.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @flat.country %>
</p>

<p>
  <strong>Zipcode:</strong>
  <%= @flat.zipcode %>
</p>
  <div class="row">
    <% @flat.pictures.each do |pic| %>
    <div class="col-xs-3">
    <%= image_tag pic.image.url(:thumb) %>
  </div>
    <% end %>
  </div>
<strong>My availabilities</strong>
  <% @flat.availabilities.each do |availability| %>
  <p>From <%= availability.start_date %> to <%= availability.end_date %></p>
  <% end %>

  <br>
<%= link_to 'Edit', edit_flat_path(@flat), :class => "btn btn-primary" %>
<%= link_to 'Delete', flat_path(@flat),:method => :delete, :class => "btn btn-primary" %>
<%= link_to 'Add availability', new_flat_availability_path(@flat), :class => "btn btn-primary" %>
<%= link_to 'My spaces', owner_flats_path(id: @flat, user_id:current_user), :class => "btn btn-primary" %>
  </div>
</div>
</div>
</div>

</div>
